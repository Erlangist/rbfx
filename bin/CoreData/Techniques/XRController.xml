<!-- Basically exists for no-face-culling so no matter what order we get from API we'll draw. Zero trust given that XR Controller Model MSFT will be implemented the same everywhere. -->
<technique vs="LitSolid" ps="LitSolid" psdefines="DIFFMAP">
    <pass name="base" cull="none"/>
    <pass name="litbase" psdefines="AMBIENT" cull="none"/>
    <pass name="light" depthtest="equal" depthwrite="false" blend="add" cull="none"/>
    <pass name="prepass" psdefines="PREPASS" cull="none"/>
    <pass name="material" psdefines="MATERIAL" depthtest="equal" depthwrite="false" cull="none"/>
    <pass name="deferred" psdefines="DEFERRED" cull="none"/>
    <pass name="depth" vs="Depth" ps="Depth" cull="none"/>
    <pass name="shadow" vs="Shadow" ps="Shadow" cull="none"/>
</technique>
